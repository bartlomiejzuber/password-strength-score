{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"esModuleInterop": true,
		"importHelpers": true,
		"outDir": "dist/",
		"types": ["jest"]
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.test.ts",
		"**/__snapshots__"
	]
}
